<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CheatSudoku.Pages.AboutPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Label
                Text="Welcome! This is an experimental app designed to solve any 9x9 sudoku puzzle as fast as possible."
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
